		</mx:HBox> 
		<mx:Tile id="mainTile" width="100%" height="100%" paddingTop="20" paddingLeft="20" borderStyle="none" horizontalAlign="center" horizontalGap="10" verticalAlign="top" verticalGap="0">
			<mycoms:ImageCanvas id="xxcz_fyxx" txt="风叶选型" click="buttonSelectClick(event)" width="100" height="100" imgname="sy_rk_img.gif"/>
			<mycoms:ImageCanvas id="zlgl_fysj" txt="风叶查询" click="buttonSelectClick(event)" width="100" height="100" imgname="sy_ly_img.gif"/>
			<mycoms:ImageCanvas id="zlgl_zcsj" txt="总成查询" click="buttonSelectClick(event)" width="100" height="100" imgname="sy_wx_img.gif"/>
